#!/bin/sh -e

APT_RELEASE_VERIFY_KEYRING="${APT_RELEASE_VERIFY_KEYRING:-/usr/share/keyrings/ubuntu-archive-keyring.gpg}"

diff_one () {
    BASE=$(dirname $1)
    RELEASE=${BASE}/Release
    RELEASE_SIGNED=${BASE}/Release.gpg
    apt-ftparchive release ${BASE} | egrep ' [0-9a-f]{32} ' | grep -v " Release$" | grep -e "Packages$" -e "Sources$" > ${RELEASE}.our
    cat ${RELEASE} | egrep ' [0-9a-f]{32} ' | grep -v " Release$" | grep -e "Packages$" -e "Sources$" > ${RELEASE}.current
    diff -U1 ${RELEASE}.current ${RELEASE}.our
}

verify_one () {
    BASE=$(dirname $1)
    RELEASE=${BASE}/Release
    RELEASE_SIGNED=${BASE}/Release.gpg
    apt-ftparchive release ${BASE} | egrep ' [0-9a-f]{32} ' | grep -v " Release$" | xargs -L1 -I{} grep -q {} ${RELEASE} || diff_one $1
    gpgv -q --keyring ${APT_RELEASE_VERIFY_KEYRING} ${RELEASE_SIGNED} ${RELEASE} 2>/dev/null
}

if [ -n "$1" ]; then
    verify_one "$1"
else
    for suite in $(git status --porcelain | cut -b4- | cut -d/ -f1 | sort -u); do
	[ -e "$suite/Release.gpg" ] || continue
	verify_one "$suite/Release.gpg"
    done
    echo "Verified all repositories."
fi
